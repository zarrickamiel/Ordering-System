        # Exclude Feature
        if num_people == 1:
            exclude = ""
            while exclude != "y" and exclude != "n":
                exclude = input("Exclude an item from the total? (y/n)\n")
                if exclude != "y" and exclude != "n":
                    print("Invalid input. Please enter y or n.")
                    continue
            if exclude == "y":
                order_num = 1
                if order_num == 1:
                    item_exclude = 0
                    while item_exclude < 1 or item_exclude > 4:
                        item_exclude = int(input("Which item will be excluded? (1-3)\n"))
                        if item_exclude < 1 or item_exclude > 4:
                            print("Invalid input. Please try again.")
                            continue
                    if item_exclude == 1:
                        print(f"{main_1_name} will be excluded from the total.")
                        main_1_price = 0
                    elif item_exclude == 2:
                        print(f"{side_1_name} will be excluded from the total.")
                        side_1_price = 0
                    elif item_exclude == 3:
                        print(f"{drink_1_name} will be excluded from the total.")
                        drink_1_price = 0

                    # Final Order Summary
                    print("Order for party of 1")
                    print("Order 1: ")
