            print(f"Side: {side_2_name} - P{side_2_price:.2f}")
            print(f"Main: {drink_2_name} - P{drink_2_price:.2f}")
            subtotal_2 = main_2_price + side_2_price + drink_2_price
            print(f"Subtotal: {subtotal_2:.2f}\n")
            total = subtotal_1 + subtotal_2
