                    print(f"Side: {side_1_name} - P{side_1_price:.2f}")
                    print(f"Main: {drink_1_name} - P{drink_1_price:.2f}")
                    subtotal_1 = main_1_price + side_1_price + drink_1_price
                    print(f"Subtotal: {subtotal_1:.2f}\n")
                    print(f"Total Amount Due: {subtotal_1:.2f}")

