                    drink_1_name = "Soda"
                    drink_1_price = 45
                elif drink_1 == 4:
                    drink_1_name = "Fruit Juice"
                    drink_1_price = 55

                print("Order 1: ")
                print(f"Main Dish: {main_1_name} - P{main_1_price:.2f}")
                print(f"Side Dish: {side_1_name} - P{side_1_price:.2f}")
                print(f"Drink: {drink_1_name} - P{drink_1_price:.2f}")

                is_correct = ""
                while is_correct != "y" and is_correct != "n":
                    is_correct = input("Is this meal set order correct? (y/n)\n")
                    if is_correct != "y" and is_correct != "n":
                        print("Invalid input. Please enter y or n.")
                        continue
                if is_correct == "n":
                    print("Ordering process restarting...")
                    order_1 = True
                else:
                    order_1 = False
